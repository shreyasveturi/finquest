// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Scio models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  rating        Int       @default(1200)
  tier          String    @default("Bronze")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  matchesAsPlayerA Match[] @relation("PlayerA")
  matchesAsPlayerB Match[] @relation("PlayerB")
  events         Event[]
}

model Question {
  id            String   @id @default(cuid())
  type          String // "conclusion-follows" or "assumption-required"
  prompt        String
  options       String // JSON array
  correctIndex  Int
  difficulty    String // "easy", "medium", "hard"
  createdAt     DateTime @default(now())

  matchRounds MatchRound[]
}

model Match {
  id          String    @id @default(cuid())
  mode        String    @default("ranked") // "ranked" only for v0.1
  status      String    @default("active") // "active", "completed", "abandoned"
  playerAId   String
  playerBId   String? // null for bot matches
  isBotMatch  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  endedAt     DateTime?
  winnerId    String? // userId of winner

  playerA     User         @relation("PlayerA", fields: [playerAId], references: [id])
  playerB     User?        @relation("PlayerB", fields: [playerBId], references: [id])
  rounds      MatchRound[]
}

model MatchRound {
  id              String    @id @default(cuid())
  matchId         String
  roundIndex      Int // 0-4 for 5 rounds
  questionId      String
  playerAAnswer   Int? // index of option selected
  playerBAnswer   Int? // index of option selected
  correctIndex    Int
  endedAt         DateTime?
  createdAt       DateTime  @default(now())

  match    Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id])

  @@unique([matchId, roundIndex])
}

model Event {
  id         String   @id @default(cuid())
  userId     String?
  eventName  String
  properties String? // JSON
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
  @@index([eventName])
  @@index([createdAt])
}
