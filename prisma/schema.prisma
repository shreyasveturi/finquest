// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Scio models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  rating        Int       @default(1200)
  tier          String    @default("Bronze")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Identity Lite fields
  clientId         String    @unique
  displayName      String
  canonicalName    String
  discriminator    Int       // 0-9999, shown as 4 digits
  lastNameChangeAt DateTime?
  banned           Boolean   @default(false)

  accounts         Account[]
  sessions         Session[]
  matchesAsPlayerA Match[] @relation("PlayerA")
  matchesAsPlayerB Match[] @relation("PlayerB")
  roundLogs        Round[]
  events           Event[]
  
  @@unique([canonicalName, discriminator])
  @@index([canonicalName])
}

model Question {
  id            String   @id @default(cuid())
  type          String // "conclusion-follows" or "assumption-required"
  prompt        String
  options       String // JSON array
  correctIndex  Int
  difficulty    String // "easy", "medium", "hard"
  createdAt     DateTime @default(now())

  matchRounds MatchRound[]
}

model GeneratedQuestion {
  id              String   @id @default(cuid())
  prompt          String   // question stem
  choicesJson     String   // JSON array of strings [4]
  correctIndex    Int      // 0-3
  explanation     String?
  difficulty      Int?     // 1-5
  topicTag        String?
  createdAt       DateTime @default(now())
  model           String   // e.g., "gpt-4o-mini"

  matchRounds     MatchRound[]

  @@index([createdAt])
}

model Match {
  id          String    @id @default(cuid())
  mode        String    @default("ranked") // "ranked" only for v0.1
  status      MatchStatus @default(ACTIVE)
  playerAId   String
  playerBId   String? // null for bot matches
  isBotMatch  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  endedAt     DateTime?
  winnerId    String? // userId of winner

  opponentType  OpponentType @default(BOT)

  ratingBeforeA Int      @default(1200)
  ratingAfterA  Int?
  ratingBeforeB Int?
  ratingAfterB  Int?

  resultA       MatchResult @default(UNKNOWN)

  playerA     User         @relation("PlayerA", fields: [playerAId], references: [id])
  playerB     User?        @relation("PlayerB", fields: [playerBId], references: [id])
  rounds      MatchRound[]
  roundLogs   Round[]
}

model Round {
  id                  String   @id @default(cuid())
  matchId             String
  match               Match    @relation(fields: [matchId], references: [id])

  userId              String
  user                User     @relation(fields: [userId], references: [id])

  roundIndex          Int
  questionId          String?

  correct             Boolean
  selectedOption      String?
  timeExpired         Boolean   @default(false)

  responseTimeMs      Int
  timeToFirstCommitMs Int?

  feedbackTag         String?   // e.g. "MISSED_CONSTRAINT", "RUSHED_DECISION"
  feedbackText        String?   // short, human-readable insight

  createdAt           DateTime  @default(now())

  @@index([matchId, roundIndex])
  @@index([userId, createdAt])
  @@unique([matchId, userId, roundIndex])
}

enum MatchStatus {
  PENDING
  ACTIVE
  COMPLETED
  ABANDONED
}

enum OpponentType {
  BOT
  HUMAN
}

enum MatchResult {
  WIN
  LOSS
  DRAW
  UNKNOWN
}

model MatchRound {
  id                    String    @id @default(cuid())
  matchId               String
  roundIndex            Int       // 0-4 for 5 rounds
  questionId            String?   // for fallback to seeded questions
  generatedQuestionId   String?   // for AI-generated questions
  playerAAnswer         Int? // index of option selected
  playerBAnswer         Int? // index of option selected
  correctIndex          Int
  endedAt               DateTime?
  createdAt             DateTime  @default(now())

  match                Match              @relation(fields: [matchId], references: [id], onDelete: Cascade)
  question             Question?          @relation(fields: [questionId], references: [id])
  generatedQuestion    GeneratedQuestion? @relation(fields: [generatedQuestionId], references: [id])

  @@unique([matchId, roundIndex])
}

model Event {
  id         String   @id @default(cuid())
  userId     String?
  eventName  String
  properties String? // JSON
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
  @@index([eventName])
  @@index([createdAt])
}
